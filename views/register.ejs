<% include ./partials/header.ejs%>
    <div
        class="w-full h-screen bg-[url('/images/background1.jpeg')] flex items-center justify-center bg-no-repeat bg-cover bg-center bg-fixed">
        <div class="relative w-[20vw] h-[40vh] bg-zinc-500 rounded-3xl px-4 py-6 opacity-60">
        </div>
        <div class="absolute flex flex-col items-center justify-center max-w-full max-h-full">
            <h1 class="font-semibold text-white text-3xl mb-10 text-center capitalize ">Register</h1>
            <form action="/register" method="post">
                <input class="block w-full px-3 py-2 mb-2 rounded-md" type="text" name="username"
                    placeholder="Username">
                <input class="block w-full px-3 py-2 mb-2 rounded-md" type="text" name="email" placeholder="email">
                <input class="block w-full px-3 py-2 mb-2 rounded-md" type="password" name="password"
                    placeholder="Password">
                <a href="#" class="mb-2 block font-semibold text-zinc-799 text-white">Forget password?</a>
                <input
                    class="block w-full px-3 py-2 bg-red-500 hover:bg-red-600 active:bg-red-700 focus:outline-none focus:ring focus:ring-red-300 rounded-md text-white font-bold"
                    type="submit" value="Login">
            </form>
            <a href="/" class="mb-2 block font-semibold text-zinc-799 text-white">Already have an account? Click
                Here...</a>
        </div>
    </div>
    <% include ./partials/footer.ejs%>