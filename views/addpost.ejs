<% include ./partials/header.ejs%>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <h1>Create a new Post</h1>
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 py-2 px-3" type="file" name="postimg">
            <input class="text-black block w-1/3 py-2 px-3 rounded-md mt-3" type="text" placeholder="Title"
                name="title">
            <textarea class="text-black block w-1/3 h-60 py-2 px-3 rounded-md mt-3" type="text"
                placeholder="Description" name="description"></textarea>
            <button class="block w-1/3 py-2 px-3 rounded-md mt-3 bg-red-500" type="submit">Create Post</button>
        </form>
    </div>
    <% include ./partials/footer.ejs%>